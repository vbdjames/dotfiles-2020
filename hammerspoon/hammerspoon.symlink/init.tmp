function open(appName, hide)
    hide = hide or false
    local app = hs.application.get(appName)
    if (app) then
        app:activate()
    else
        hs.application.open(appName)
    end
end

function kill(appName)
    local app = hs.application.get(appName)
    if (app) then
        app:activate()
        app:kill()
    else
        print("could not find app " .. appName)
    end
end

